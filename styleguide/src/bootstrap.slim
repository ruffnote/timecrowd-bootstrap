        .gd-block
          .row
            .col
              .form-group
                label.c-input.c-checkbox
                  input type="checkbox" /
                  span.c-indicator
                  | Check this custom checkbox
              .form-group
                label.c-input.c-radio
                  input#radio1 name="radio" type="radio" /
                  span.c-indicator
                  | Toggle this custom radio
                label.c-input.c-radio
                  input#radio2 name="radio" type="radio" /
                  span.c-indicator
                  | Or toggle this other custom radio
              .form-group
                .c-inputs-stacked
                  label.c-input.c-radio
                    input#radioStacked1 name="radio-stacked" type="radio" /
                    span.c-indicator
                    | Toggle this custom radio
                  label.c-input.c-radio
                    input#radioStacked2 name="radio-stacked" type="radio" /
                    span.c-indicator
                    | Or toggle this other custom radio
              .form-group
                select.c-select
                  option selected=""  Open this select menu
                  option value="1"  One
                  option value="2"  Two
                  option value="3"  Three
              .form-group
                label.file
                  input#file type="file" /
                  span.file-custom

        h3.gd-header インプットグループ
        .gd-block
          .row
            .col                  
              .input-group
                span#basic-addon1.input-group-addon @
                input.form-control aria-describedby="basic-addon1" placeholder="Username" type="text" /
              br/
              .input-group
                input.form-control aria-describedby="basic-addon2" placeholder=("Recipient's username") type="text" /
                span#basic-addon2.input-group-addon @example.com
              br/
              label for="basic-url"  Your vanity URL
              .input-group
                span#basic-addon3.input-group-addon https://example.com/users/
                input#basic-url.form-control aria-describedby="basic-addon3" type="text" /
              br/
              .input-group
                span.input-group-addon $
                input.form-control aria-label=("Amount (to the nearest dollar)") type="text" /
                span.input-group-addon .00
              br/
              .input-group
                .input-group-btn
                  button.btn.btn-secondary type="button"  Action
                  button.btn.btn-secondary.dropdown-toggle aria-expanded="false" aria-haspopup="true" data-toggle="dropdown" type="button" 
                    span.sr-only Toggle Dropdown
                  .dropdown-menu
                    a.dropdown-item href="#"  Action
                    a.dropdown-item href="#"  Another action
                    a.dropdown-item href="#"  Something else here
                    .dropdown-divider role="separator" 
                    a.dropdown-item href="#"  Separated link
                input.form-control aria-label=("Text input with segmented button dropdown") type="text" /
              br/
